# ======================================
# BMAD-KEKTECH3.0 ENVIRONMENT CONFIGURATION
# ======================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git (it's in .gitignore)

# ======================================
# DEPLOYMENT WALLETS
# ======================================
# Private key for deploying contracts (WITHOUT 0x prefix)
# IMPORTANT: Use a dedicated deployment wallet, NOT your personal wallet
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# ======================================
# SEPOLIA TESTNET (Week 1 - Ultra Cautious Deployment)
# ======================================
# Get API key from: https://www.alchemy.com/ or https://www.infura.io/
SEPOLIA_RPC=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Get Sepolia ETH from faucets:
# - https://sepoliafaucet.com/
# - https://www.infura.io/faucet/sepolia
# - https://faucet.quicknode.com/ethereum/sepolia

# ======================================
# BASED NETWORK (Week 2-3)
# ======================================
# Based testnet and mainnet RPC endpoints
BASED_TESTNET_RPC=https://testnet-rpc.based.network
BASED_MAINNET_RPC=https://mainnet-rpc.based.network

# Real $BASED token address on mainnet (to be provided)
BASED_TOKEN_ADDRESS=0x...

# ======================================
# CONTRACT VERIFICATION
# ======================================
# Etherscan API key for Sepolia verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Basescan/Based Explorer API key for contract verification
EXPLORER_API_KEY=your_explorer_api_key_here

# ======================================
# MONITORING & ALERTS (Optional Week 1, Required Week 2)
# ======================================
# Tenderly Project for monitoring
# Get from: https://tenderly.co/
TENDERLY_PROJECT_ID=your_project_id
TENDERLY_USERNAME=your_username
TENDERLY_ACCESS_KEY=your_access_key

# OpenZeppelin Defender for automated security monitoring
# Get from: https://defender.openzeppelin.com/
DEFENDER_TEAM_API_KEY=your_defender_team_api_key
DEFENDER_TEAM_API_SECRET_KEY=your_defender_secret_key

# ======================================
# DEPLOYMENT PARAMETERS
# ======================================
# Governance Parameters
GOVERNANCE_PROPOSAL_THRESHOLD=1000  # 1000 $BASED to create proposal
GOVERNANCE_VOTING_PERIOD=259200     # 3 days in seconds

# Market Parameters
MARKET_CREATION_BOND=100            # 100 $BASED bond to create market
MIN_BET_AMOUNT=1                    # 1 $BASED minimum bet

# NFT Parameters
MAX_NFT_SUPPLY=10000                # Maximum 10,000 NFTs
NFT_MINT_PRICE=10                   # 10 $BASED per NFT

# ======================================
# RESTRICTED MODE (Week 2 Mainnet)
# ======================================
# Enable restricted mode for cautious launch
RESTRICTED_MODE=true

# Maximum bet amount during restricted mode (in $BASED)
MAX_BET_RESTRICTED=100

# Maximum market size during restricted mode (in $BASED)
MAX_MARKET_RESTRICTED=10000

# Whitelisted market creators (comma-separated addresses)
WHITELISTED_CREATORS=0x...,0x...,0x...

# ======================================
# GAS & PERFORMANCE
# ======================================
# Enable gas reporting (set to "true" to see gas costs)
REPORT_GAS=false

# Skip gas estimation for faster testing (testnet only)
SKIP_GAS_ESTIMATION=false

# ======================================
# NOTIFICATION CHANNELS
# ======================================
# Discord webhook for alerts (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Telegram bot token and chat ID (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ======================================
# TESTING & DEVELOPMENT
# ======================================
# Enable verbose logging
VERBOSE_LOGGING=false

# Run smoke tests after deployment
RUN_SMOKE_TESTS=true

# Verify contracts on Etherscan after deployment
VERIFY_CONTRACTS=true

# ======================================
# EMERGENCY CONTACTS
# ======================================
# Emergency contact information (for documentation)
EMERGENCY_CONTACT_NAME=Your Name
EMERGENCY_CONTACT_TELEGRAM=@yourtelegram
EMERGENCY_CONTACT_DISCORD=yourdiscord#1234

# ======================================
# SECURITY REMINDERS
# ======================================
# ✅ Private key stored securely (hardware wallet backup)
# ✅ .env file in .gitignore
# ✅ Deployment wallet has sufficient funds
# ✅ API keys have appropriate permissions
# ✅ Monitoring tools configured
# ✅ Emergency contacts updated
# ✅ Team members have access to emergency procedures

# ======================================
# DEPLOYMENT PHASES
# ======================================
# Week 1: Sepolia testnet validation (use SEPOLIA_RPC)
# Week 2: Based mainnet restricted mode (use BASED_MAINNET_RPC + RESTRICTED_MODE=true)
# Week 3: Full public launch (use BASED_MAINNET_RPC + RESTRICTED_MODE=false)
